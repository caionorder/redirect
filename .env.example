# Application
NODE_ENV=development  # development | production | test
PORT=3000

# Database
MONGODB_URL=mongodb://localhost:27017/redirect

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# CORS
CORS_ORIGIN=*

# Clustering
# Em desenvolvimento (NODE_ENV=development), o cluster é automaticamente desabilitado
# Em produção, você pode controlar com estas variáveis:
CLUSTER_ENABLED=true  # true | false - Habilita/desabilita clustering
WORKER_COUNT=4        # Número de workers (padrão: número de CPUs)